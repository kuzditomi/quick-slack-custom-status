@model AddButtonModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Let's do some quick slack status update!</p>

    @if (User.Identity.IsAuthenticated)
    {
        @if (Model.IsLinked)
        {
            <div>
                <label>
                    workspace
                    <select name="linkId">
                        @foreach (var linkedTeam in Model.Links)
                        {
                            <option value="@linkedTeam.Id">@linkedTeam.Name</option>
                        }
                    </select>
                </label>
            </div>
            <div id="saved-statuses">

            </div>
            <label>
                status text
                <input id="statustext" />
            </label>
            <label>
                status emoji
                <input id="statusemoji" />
            </label>

            <button id="add">Add to list!</button>
            @section Scripts{
                <script>
                    $(document).ready(() => {
                        initStatusScript();
                    });
                </script>
            }
        }
        else
        {
            <a href="@Model.SlackUrl">
                <img alt="Add to Slack" height="40" width="139" src="https://platform.slack-edge.com/img/add_to_slack.png" />
            </a>
        }
    }
    else
    {
        <form action="/signin" method="post">
            <button class="btn btn-lg btn-success m-1" type="submit">Connect using Slack</button>
        </form>
    }
</div>
